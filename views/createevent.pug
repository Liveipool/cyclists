include header.pug

block links
    link(rel='stylesheet', href='/stylesheets/createevent.css')
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css")

div.event-detail
    // save the usernameï¼Œbut not display
    div#usernameText #{username}
    div.row
        div#left.col-md-6
            h1 Create event
        div#right.col-md-6
            p Weather
            input#target-city(type="text" placeholder="Enter City Name")
            a#search-btn(href="#")
                i.fas.fa-search
            div#Result-city-name
            img#icon(src="" alt="")
            div#temp
    form
        div.form-group
            label(for="create_title") Title: 
            input#create_title.form-control(type="text" autocomplete="off")
        div.form-group
            label(for="create_date") Date: 
            input#create_date.form-control(type="date" autocomplete="off")
        div.form-group
            label(for="create_time") Time: 
            input#create_time.form-control(type="time" autocomplete="off")
        div.form-group
            label(for="create_route") Route: 
        div#map
        div#place
            input#origin-input.controls(type="text" placehorlder="Enter an origin location" autocomplete="off")
            input#destination-input.controls(type="text" placehorlder="Enter an destination location" autocomplete="off")
        div.form-group
            label(for="create_description") Description: 
            textarea#create_description.form-control(rows="3" autocomplete="off")
        button#create_publish.btn.btn-default(type="submit" onClick="save_routes()") Publish

script(src="/javascripts/createevent.js")
script(src="/javascripts/event.js")
script(src="/javascripts/recordRoute.js")
script(src="/javascripts/weather.js")
script(src="https://use.fontawesome.com/releases/v5.0.13/js/all.js")
