extends layout
//- import css
block links
    link(rel='stylesheet', href='/stylesheets/login.css')

block content
  div.header-page
    nav.navbar.navbar-inverse.navbar-fixed-top
      div.container-fluid
        div.navbar-header
          a.navbar-brand(href='/record') Cycle Track 101
    div.login-page
        div.title Login
        div
            if success_msg.length
                div.alert.alert-success #{success_msg}
            if error_msg.length
                div.alert.alert-danger #{error_msg}
            if error.length
                div.alert.alert-danger #{error}

        form(action="/users/login" method="POST")
            div.form-group
                label(for="username") Username
                input#username.form-control(type="text" placeholder="Please enter your username" name="username")
            div.form-group
                label(for="password") Password
                input#password.form-control(type="password" placeholder="Please enter your password" name="password")
            button#login.btn.btn-default(type="submit") Login
            //- button#register.btn.btn-default(type="submit") Register
            a#register(href="/users/register") Register

