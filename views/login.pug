extends layout
//- 需要引入css文件等，就这么写
block links
    link(rel='stylesheet', href='/stylesheets/login.css')

//- 下面是写该页面的内容
block content
    div.login-page
        div.title Login
        //- bootstrap的表单组件：https://v3.bootcss.com/css/#forms
        form
            div.form-group
                label(for="username") Username
                input#username.form-control(type="text" placeholder="Please enter your username")
            div.form-group
                label(for="password") Password
                input#password.form-control(type="text" placeholder="Please enter your password")
        button#login.btn.btn-default Login
        button#register.btn.btn-default Register

        //- 各个页面需要引入的js文件一般是单独写
        script(src="/javascripts/login.js")
